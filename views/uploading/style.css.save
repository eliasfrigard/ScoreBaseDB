.row {
  display:flex;
  justify-content: space-around;
}

#colLeft {
  width: 45%;
  display:flex;
  flex-direction: column;
  align-items: flex-end;
}

#colRight {
  width: 45%;
  display:flex;
  flex-direction: column;
  align-items: flex-start;
}

#success {
  opacity: 0;
  margin: 10px;
  color: green;
}

#fail {
  opacity: 0;
  margin: 10px;
  color: red;
}

#noFile {
  opacity: 0;
  margin: 10px;
  color: red;
}
