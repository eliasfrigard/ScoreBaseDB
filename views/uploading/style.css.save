* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

body {
  width: 100%;
  height: 100vh;
  
  font-family: 'Poppins', sans-serif;
  color: white;
  text-align: center;

  background: NNhU0i27nq
  letter-spacing: 1px;

  display: flex;
  flex-direction: column;
  justify-content: center;
}

h1 {
  margin:50px;
  font-size: 50px;
}

input[type=text] {
  width: 70%;
  padding: 10px 18px;
  display: inline-block;
  border: 1px solid #d0d5d9;
  border-radius: 3px;
  -webkit-box-sizing: border-box;
          box-sizing: border-box;
  margin-top: 20px;
  margin-bottom: 20px;
  font-size: 16px;
  box-shadow: 0px 0px 8px 1px rgba(0,0,0,0.2);

}

input[type=text]:hover {
  transform: scaleX(1.02);
}

input[type=submit] {
  display:inline-block;
  width: 68%;
  background-color: rgba(169, 50, 50, 1);
  box-shadow: 0px 0px 8px 1px rgba(0,0,0,0.2);
  color: white;
  padding: 15px;
  margin:0;
  margin-bottom: 6px;
  border: none;
  border-radius: 3px;
  cursor: pointer;
  font-weight: 500;
  font-size: 16px;
  letter-spacing: 1px;
  margin-top: 50px;
  font-size: 1.25em;
}

input[type=submit]:hover {
  background-color: rgb(196, 41, 41);
  transform: scaleX(1.02);
}

#file {
	width: 0.1px;
	height: 0.1px;
	opacity: 0;
	overflow: hidden;
	position: absolute;
	z-index: -1;
}

#file + label {
  font-size: 1.25em;
  font-weight:500;
  color: white;
  background-color:  rgba(169, 50, 50, 1);
  display: inline-block;
  padding:7px;
  width: 70%;
  margin-top: 18px;
  border-radius: 3px;
}

#file:focus + label,
#file + label:hover {
  background-color: rgb(196, 41, 41);
  cursor: pointer;
  transform: scaleX(1.02);
}

.tooltip {
  position: relative;
  display: inline-block;
  border-bottom: 1px dotted black;
  width:100%;
}

.tooltip .tooltiptext {
  visibility: hidden;
  width: 120px;
  background-color: black;
  color: #fff;
  text-align: center;
  border-radius: 6px;
  padding: 5px 0;

  /* Position the tooltip */
  position: absolute;
  z-index: 1;
}

.tooltip:hover .tooltiptext {
  visibility: visible;
}

